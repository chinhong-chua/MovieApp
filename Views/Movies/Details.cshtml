@model MovieApp.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    li:before {
        /*list-style-type: square;*/
        content: "- ";
    }
</style>
<div class="row mt-3">
    <div class="col-12">
        <h2>@Model.Name</h2>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul class="list-group text-black">
            <li class="list-group-item">Genre: @Model.Genres.FirstOrDefault().Name</li>
            <li class="list-group-item">Release Date: @Model.ReleaseDate.ToString("dddd, dd MMMM yyyy")</li>
            <li class="list-group-item">Date Added: @Model.DateAdded.ToString("dddd, dd MMMMM yyyy")</li>
            <li class="list-group-item">Number in Stock: @Model.NumberInStock</li>
        </ul>
    </div>
</div>


