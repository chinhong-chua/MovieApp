@model IEnumerable<MovieApp.Models.Movie>  
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    a.custom-card,
    a.custom-card:hover {
        color: inherit;
        text-decoration: none;
    }
</style>
<div class="row">
    <div class="col-12">
        <h2>Movie</h2>
        
        @if (!Model.Any())
        {
            <p>There is no movie available</p>
        }
        else
        {
            <div class="row  ">
                    @foreach (var movie in Model)
                    {
                        <div class="col-md-4 col-12 ">
                            <div class="card text-white bg-primary mb-3 " style="">
                                <a href="@Url.Action("Details","Movies", new {id= movie.Id})" class="custom-card">
                                <div class="card-header">
                                    @*@foreach (var genre in movie.Genres)
                                    {
                                        @genre.Name
                                    }*@
                                    @movie.Genres.FirstOrDefault().Name
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title">@movie.Name</h4>
                                    <p class="card-text">@movie.ReleaseDate</p>
                                </div>
                                </a>
                            </div>
                        </div>

                    }
            </div>
         
      
        }
    
    </div>
</div>

