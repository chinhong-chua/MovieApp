@model IEnumerable<MovieApp.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    a.custom-card,
    a.custom-card:hover {
        color: inherit;
        text-decoration: none;
    }
</style>
<div class="row">
    <div class="col-12 mt-3">
        <h2>Movie</h2>

        <div class="row mt-3">
            <div class="col-6 p-3">
                @*@Html.ActionLink("Create New Movie", "Create", "Movies", new { @class = "btn btn-success" })*@
                @*<a href='@Url.Action("MyAction", "MyController")'>
                        <img src='@Url.Content("~/Content/Images/MyLinkImage.png")' />
                    </a>*@
                <button type="button" onclick="location.href='@Url.Action("Create","Movies")'" class="btn btn-outline-success">Create New Movie</button>
            </div>
        </div>

        <table id="movies" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie</th>
                    <th>Genre</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>


    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href='/movies/edit/" + movie.id + "'>" + movie.name + "</a>";
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-movie-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });
            $("#movies").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/movies/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();

                            }
                        });
                    }
                });
            });
        });
    </script>
    }